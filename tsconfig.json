{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "downlevelIteration": true,
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "rootDir": "src"
  },
  "include": ["src/*"],
  "exclude": ["node_modules"]
}